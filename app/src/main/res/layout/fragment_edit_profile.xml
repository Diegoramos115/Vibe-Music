<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:textSize="24sp"
            android:textColor="@color/blue"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/cont_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Nombre"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/background_pink_tv"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/cont_lastName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Apellido"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/background_pink_tv"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/cont_email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:background="@drawable/background_pink_tv"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/cont_phone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Teléfono"
            android:inputType="phone"
            android:padding="10dp"
            android:background="@drawable/background_pink_tv"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/cont_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@drawable/background_pink_tv"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/cont_rePassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Confirmar Contraseña"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@drawable/background_pink_tv"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btn_save_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="10dp"
            android:backgroundTint="@color/pink"
            android:text="Guardar Cambios"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>