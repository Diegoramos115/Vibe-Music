<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="124dp"
                android:layout_height="162dp"
                app:srcCompat="@mipmap/ic_launcher_foreground" />

            <TextView
                android:id="@+id/tv_name_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/name_app"
                android:textColor="@color/blue"
                android:textSize="48sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/text_login"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:srcCompat="@drawable/ic_user_profile" />

            <EditText
                android:id="@+id/cont_email"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/background_pink_tv"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:padding="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/img_password"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:srcCompat="@drawable/password" />

            <EditText
                android:id="@+id/cont_email2"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/background_pink_tv"
                android:ems="10"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:padding="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_login"
            android:layout_width="301dp"
            android:layout_height="75dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/pink"
            android:fontFamily="sans-serif-medium"
            android:text="@string/txt_btn_login"
            android:textAlignment="center"
            android:textSize="42sp"
            app:strokeColor="@color/white"
            app:strokeWidth="4dp" />

        <TextView
            android:id="@+id/tv_rec_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="@string/txt_rec_password"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="24sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_log_goog"
            android:layout_width="271dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/txt_log_goog"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:strokeColor="@color/pink"
            app:strokeWidth="2dp"
            app:backgroundTint="@color/white"
            app:icon="@drawable/google"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconSize="20dp"
            app:iconTint="@null" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/tv_reg_pt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/txt_reg_pt1"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_reg_pt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif"
                android:text="@string/txt_reg_pt2"
                android:textAlignment="center"
                android:textColor="@color/pink"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>